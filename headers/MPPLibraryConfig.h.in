#ifndef MPP_MPPLIBRARYCONFIG_H
#define MPP_MPPLIBRARYCONFIG_H

#define MPP_LIBRARY_VERSION_MAJOR @mpp_VERSION_MAJOR@
#define MPP_LIBRARY_VERSION_MINOR @mpp_VERSION_MINOR@
#define MPP_LIBRARY_VERSION_PATCH @mpp_VERSION_PATCH@
#define MPP_LIBRARY_BUILD_TYPE "@CMAKE_BUILD_TYPE@"
#define MPP_LIBRARY_VERSION "@CMAKE_PROJECT_VERSION@"
#define MPP_LIBRARY_SYSTEM "@CMAKE_SYSTEM@"
#ifdef __clang__
    #define MPP_LIBRARY_BUILD_COMPILER "Clang"
    #ifdef __clang_version__
        #define MPP_LIBRARY_BUILD_COMPILER_HAVE_CLANG_VERSION 1
    #else
        #define MPP_LIBRARY_BUILD_COMPILER_HAVE_CLANG_VERSION 0
    #endif
#else
    #define MPP_LIBRARY_BUILD_COMPILER "Orwell"
    #define MPP_LIBRARY_BUILD_COMPILER_VERSION "1984"
    #define MPP_LIBRARY_BUILD_COMPILER_HAVE_CLANG_VERSION 0
#endif

#if MPP_LIBRARY_BUILD_COMPILER_HAVE_CLANG_VERSION == 1
static const char COMPILER_VERSION[] = __clang_version__;
static const char COMPILER_NAME[] = MPP_LIBRARY_BUILD_COMPILER;
#else
static const char COMPILER_VERSION[] = MPP_LIBRARY_BUILD_COMPILER_VERSION;
static const char COMPILER_NAME[] = MPP_LIBRARY_BUILD_COMPILER;
#endif

#endif //MPP_MPPLIBRARYCONFIG_H
